/* pages/orderList/orderList.wxss */

Page {
     width: 100%;
     height: 100%;
}

.order_contain {
     display: flex;
     flex-flow: column;
     flex-direction: column;
     height: 100%;
}

.module_item {
     width: 100%;
     height: 200rpx;
     padding: 25rpx;
     position: relative;
     border-bottom: 1rpx solid #ccc;
     box-sizing: border-box;
}

.module_item .content {
     display: flex;
     flex-direction: column;
}

.hotelItem {
     display: flex;
     align-items: center;
     justify-content: space-between;
}

.hotelItem .name {
     font-size: 30rpx;
     font-weight: bold;
     color: black;
}

.hotelItem .image {
     width: 45rpx;
     height: 45rpx;
     margin-right: 16rpx;
}

.hotelItem .price {
     font-size: 35rpx;
     font-weight: bold;
     color: #0052d9;
     margin-left: auto;
}

.content .range {
     margin-top: 10rpx;
     font-size: 24rpx;
     color: #777;
}

.infoItem {
     margin-top: 10rpx;
}

.infoItem .type {
     font-size: 24rpx;
     color: #777;
     background: #eef8fe;
     padding: 2rpx 8rpx;
     border-radius: 15rpx;
}